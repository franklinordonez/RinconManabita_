<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RinconManabita.Datos.Registro">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center" >
            <Label Text="Registro de usuario" HorizontalTextAlignment="Center" TextColor="OrangeRed" FontSize="26"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Entry x:Name="txtNombre" Placeholder="Ingrese su nombre" TextColor="Blue" />
            <Entry x:Name="txtApellido" Placeholder="Ingrese su apellido" TextColor="Blue"/>
            <Entry x:Name="txtCorreo" Placeholder="Ingrese su correo electronico" TextColor="Blue"/>
            <Entry x:Name="txtDireccion" Placeholder="Direccion" TextColor="Blue"/>
            <Entry x:Name="ID" Placeholder="Ingrese su ID" TextColor="Blue"/>
            <Button x:Name="btnInformacion" Text="Mostrar Informacion" Clicked="btnInformacion_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>